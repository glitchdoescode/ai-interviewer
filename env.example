# AI Interviewer Platform - Environment Variables Example

# LLM Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here
LLM_MODEL=gemini-1.5-pro-latest
LLM_TEMPERATURE=0.7

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@mongodb:27017/
MONGODB_DATABASE=ai_interviewer
MONGODB_SESSIONS_COLLECTION=interview_sessions
MONGODB_METADATA_COLLECTION=session_metadata

# Speech API Configuration (Deepgram)
DEEPGRAM_API_KEY=your_deepgram_api_key_here
STT_MODEL=nova-2
TTS_VOICE=nova
TTS_SAMPLE_RATE=24000

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENABLE_HTTPS=false
CERT_FILE=./certs/cert.pem
KEY_FILE=./certs/key.pem

# Rate Limiting
RATE_LIMIT_DEFAULT=30/minute
RATE_LIMIT_INTERVIEW=10/minute
RATE_LIMIT_AUDIO=5/minute

# Logging
LOG_LEVEL=INFO

# System Configuration
SYSTEM_NAME=TechHire
AI_NAME=Sarah Chen
AI_ROLE=Technical Hiring Manager

# LiveKit Configuration
# Get these from your LiveKit server deployment (e.g., .env file from docker-compose or LiveKit Cloud dashboard)
LIVEKIT_HOST="http://localhost:7880" # Your LiveKit server URL
LIVEKIT_API_KEY="devkey" # Default for local non-production server, replace with your actual key
LIVEKIT_API_SECRET="secret" # Default for local non-production server, replace with your actual secret

# Deepgram API Key (Add when Deepgram integration starts)
# DEEPGRAM_API_KEY="your_deepgram_api_key" 